<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Akasa.Mobile.Views.NewCustomerPage"
		Title="New Item">
	<ContentPage.ToolbarItems>
		<ToolbarItem Text="Save" Clicked="Save_Clicked" />
	</ContentPage.ToolbarItems>
	<ContentPage.Content>
		<StackLayout Spacing="20" Padding="15">
			<Label Text="Name *" FontSize="Medium" />
            <Entry Text="{Binding Customer.Name}" FontSize="Small" />
		    <Label Text="Email" FontSize="Medium" />
            <Editor Text="{Binding Customer.Email}" FontSize="Small" Margin="0" />
		    <Label Text="Phone *" FontSize="Medium" />
            <Editor Text="{Binding Customer.Phone}" FontSize="Small" Margin="0" />
		    <Label Text="Emargency Phone" FontSize="Medium" />
            <Editor Text="{Binding Customer.EmergencyPhone}" FontSize="Small" Margin="0" />
        </StackLayout>
	</ContentPage.Content>
</ContentPage>
